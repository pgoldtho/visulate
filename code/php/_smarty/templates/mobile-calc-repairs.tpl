  cVal = $("#a16").val() * $("#b16").val();  $("#c16").val(cVal); total += cVal;
  
  $("#c17").val(addCommas(total));

  var arv = $("#f1").val() * 1;
  var loan = $("#f2").val()* 1;
  var rate = $("#f3").val()* 1;
  cVal = Math.round(loan * (rate /1200));
  $("#f4").val(cVal);
  var weeks = (($("#f5").val() * 1) + ($("#f6").val() * 1));
  
  var carryingCost = Math.round(loan * weeks * (rate / 5200));
  $("#f7").val(carryingCost);

  var commissions = Math.round(arv * ($("#e8").val() /100));
  $("#f8").val(commissions);

  var arvRe = arv - total;
  $("#f9").val(arvRe);

  if (this.id=="f10")
    {
     var mao = $("#f10").val()* 1;
     var maoPct = Math.round(mao/(arv - total) * 100);
     $("#e10").val(maoPct);
    }
  else
   {
    var maoPct = $("#e10").val()* 1;
    var mao = Math.round(maoPct * (arv - total)/100);
    $("#f10").val(mao);
  }

  if (this.id=="f11")
